@model Looks.Models.FittingType

@{
    ViewBag.Title = "Trouser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".js-toggle").click(function () {
            if ($(this).hasClass("selected")) {
                $(this).removeClass("selected");
                $('#' + $(this).data("item-name")).val('False');

            } else {
                $(this).addClass("selected");
                $('#' + $(this).data("item-name")).val('True');
            }
        });
    });
</script>

<h4>First up: Which trouser fits do&nbsp;you&nbsp;like best?</h4>
<p class="helper-text">
    The all-important question … choose more than one if you’re on the fence.
</p>
<div class="registration-main">
    <form class="registration-step-trouser-fits" method="POST">
        <input type="hidden" name="csrfmiddlewaretoken" value="TbxwyzHc36vvz6KUTb6cdNHxsG2njCaB">
        <ul class="image-select-group image-select-group-with-labels ">
            <li>
                <a class="js-toggle" data-item-name="IsSkinny">
                    <img src="~/Content/Images/Signup/trousers_skinny.jpg">
                    <label>Skinny</label>
                </a>
                <input data-val="true" id="IsSkinny" name="IsSkinny" type="hidden" value="False">
            </li>
            <li>
                <a class="js-toggle" data-item-name="IsSlim">
                    <img src="~/Content/Images/Signup/trousers_slim.jpg">
                    <label>Slim</label>
                </a>
                <input data-val="true" id="IsSlim" name="IsSlim" type="hidden" value="False">
            </li>
            <li>
                <a class="js-toggle " data-item-name="IsRegular">
                    <img src="~/Content/Images/Signup/trousers_straight_regular.jpg">
                    <label>Straight/Regular</label>
                </a>
                <input data-val="true" id="IsRegular" name="IsRegular" type="hidden" value="False">
            </li>
            <li>
                <a class="js-toggle " data-item-name="IsBootcut">
                    <img src="~/Content/Images/Signup/trousers_bootcut.jpg">
                    <label>Bootcut</label>
                </a>
                <input data-val="true" id="IsBootcut" name="IsBootcut" type="hidden" value="False">
            </li>
            <li>
                <a class="js-toggle " data-item-name="IsLoose">
                    <img src="~/Content/Images/Signup/trousers_loose.jpg">
                    <label>Loose</label>
                </a>
                <input data-val="true" id="IsLoose" name="IsLoose" type="hidden" value="False">
            </li>
        </ul>
        <div class="form-actions ">
            <button type="submit" class="btn btn-default">Next</button>
            <p class="form-alternative-actions">Already have an account? <a href="https://www.thread.com/signin/existing">Sign in</a></p>
        </div>
    </form>
</div>